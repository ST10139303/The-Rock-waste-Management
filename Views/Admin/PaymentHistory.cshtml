@model List<TheRockWasteManagement.Models.PaymentModel>
@{
    ViewData["Title"] = "Payment History";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .payment-card {
        border-left: 4px solid #28a745;
        border-radius: 10px;
    }

        .payment-card.pending {
            border-left-color: #ffc107;
        }

        .payment-card.failed {
            border-left-color: #dc3545;
        }
</style>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fa fa-history me-2"></i>Payment History</h4>
        </div>
        <div class="card-body">
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-info text-center">
                    <i class="fa fa-info-circle me-2"></i>No payment history found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Customer</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Method</th>
                                <th>Reference</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@payment.CustomerName</td>
                                    <td>
                                        @payment.Description
                                        @if (!string.IsNullOrEmpty(payment.BookingId))
                                        {
                                            <br>
                                            <small class="text-muted">Booking ID: @payment.BookingId</small>
                                        }
                                    </td>
                                    <td class="fw-bold text-success">R@(payment.Amount.ToString("F2"))</td>
                                    <td>
                                        <span class="badge bg-secondary">@payment.PaymentMethod</span>
                                    </td>
                                    <td>@payment.Reference</td>
                                    <td>@payment.PaymentDate.ToString("dd MMM yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge @(payment.Status == "completed" ? "bg-success" : payment.Status == "pending" ? "bg-warning" : "bg-danger")">
                                            @payment.Status?.ToUpper()
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body text-center">
                                <h4>R@(Model.Where(p => p.Status == "completed").Sum(p => p.Amount).ToString("F2"))</h4>
                                <small>Total Received</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body text-center">
                                <h4>@Model.Count(p => p.Status == "pending")</h4>
                                <small>Pending Payments</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info">
                            <div class="card-body text-center">
                                <h4>@Model.Count</h4>
                                <small>Total Transactions</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body text-center">
                                <h4>@Model.Select(p => p.CustomerName).Distinct().Count()</h4>
                                <small>Unique Customers</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>