@model AssignWorkerPageModel
@{
    ViewData["Title"] = "Assign Workers";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center my-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-person-lines-fill me-2"></i>Assign Workers
            </h2>
            <p class="text-muted mb-0">Manage and assign workers to customer bookings. Changes sync instantly.</p>
        </div>
        <div>
            <button class="btn btn-outline-primary btn-sm" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
            <a asp-action="Dashboard" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
        </div>
    </div>

    <!-- Assignment Form -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-success text-white">
            <i class="bi bi-plus-circle me-1"></i> Assign a Worker
        </div>
        <div class="card-body">
            <form asp-action="AssignWorker" method="post" class="row g-3">
                <!-- Worker Dropdown -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Select Worker</label>
                    <select name="workerId" class="form-select" required>
                        <option value="">-- Choose Worker --</option>
                        @foreach (var worker in Model.Workers)
                        {
                            <option value="@worker.Id">@worker.Name</option>
                        }
                    </select>
                </div>

                <!-- Booking Dropdown -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Select Booking</label>
                    <select name="bookingId" class="form-select" required>
                        <option value="">-- Choose Booking --</option>
                        @foreach (var booking in Model.Bookings)
                        {
                            <option value="@booking.Id">
                                @booking.BookingAddress (@booking.BookingDate.ToString("yyyy-MM-dd"))
                            </option>
                        }
                    </select>
                </div>

                <!-- Submit Button -->
                <div class="col-12 text-end mt-3">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle me-1"></i> Assign Worker
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Current Assignments -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-list-task me-1"></i> Current Assignments
                <span class="badge bg-light text-dark ms-2">@Model.CurrentAssignments?.Count</span>
            </div>
            <small class="text-white-50">Live status updates • Auto-refresh every 30 seconds</small>
        </div>
        <div class="card-body p-0">
            @if (Model.CurrentAssignments != null && Model.CurrentAssignments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Worker</th>
                                <th>Booking Details</th>
                                <th>Status Animation</th>
                                <th>Worker Status</th>
                                <th>Booking Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var assignment in Model.CurrentAssignments)
                            {
                                string workerBadgeClass = assignment.WorkerStatus?.ToLower() switch
                                {
                                    "pending" => "bg-warning text-dark",
                                    "in progress" => "bg-info text-dark",
                                    "attending" => "bg-primary text-white",
                                    "completed" => "bg-success text-white",
                                    "cancelled" => "bg-danger text-white",
                                    _ => "bg-secondary text-white"
                                };

                                string bookingBadgeClass = assignment.BookingStatus?.ToLower() switch
                                {
                                    "assigned" => "bg-info text-white",
                                    "in progress" => "bg-primary text-white",
                                    "completed" => "bg-success text-white",
                                    "cancelled" => "bg-danger text-white",
                                    _ => "bg-secondary text-white"
                                };

                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="worker-avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                @(assignment.WorkerName?.Substring(0, 1).ToUpper() ?? "W")
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@assignment.WorkerName</div>
                                                <small class="text-muted">Worker</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-geo-alt me-2 text-secondary"></i>
                                            <div>
                                                <div class="fw-semibold">@assignment.BookingAddress</div>
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar me-1"></i>
                                                    @assignment.Date.ToString("yyyy-MM-dd")
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="status-animation-container" style="width: 80px; height: 60px;">
                                            <!-- Animated Status Indicator -->
                                            <div class="status-animation @@GetAnimationClass(assignment.WorkerStatus)"
                                                 data-status="@assignment.WorkerStatus?.ToLower()">
                                                @if (assignment.WorkerStatus?.ToLower() == "pending")
                                                {
                                                    <!-- Dirty Dustbin Animation -->
                                                    <div class="dustbin dirty">
                                                        <div class="dustbin-body">
                                                            <div class="dirt-particles">
                                                                <div class="particle"></div>
                                                                <div class="particle"></div>
                                                                <div class="particle"></div>
                                                            </div>
                                                            <div class="flies">
                                                                <div class="fly"></div>
                                                                <div class="fly"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else if (assignment.WorkerStatus?.ToLower() == "attending")
                                                {
                                                    <!-- Cleaning in Progress Animation -->
                                                    <div class="dustbin cleaning">
                                                        <div class="dustbin-body">
                                                            <div class="bubbles">
                                                                <div class="bubble"></div>
                                                                <div class="bubble"></div>
                                                                <div class="bubble"></div>
                                                            </div>
                                                            <div class="sparkle"></div>
                                                        </div>
                                                    </div>
                                                }
                                                else if (assignment.WorkerStatus?.ToLower() == "completed")
                                                {
                                                    <!-- Clean Dustbin Animation -->
                                                    <div class="dustbin clean">
                                                        <div class="dustbin-body">
                                                            <div class="sparkles">
                                                                <div class="sparkle"></div>
                                                                <div class="sparkle"></div>
                                                                <div class="sparkle"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <!-- Default State -->
                                                    <div class="dustbin default">
                                                        <div class="dustbin-body"></div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @workerBadgeClass px-3 py-2 status-badge">
                                            <i class="bi @(assignment.WorkerStatus == "Pending" ? "bi-clock" : assignment.WorkerStatus == "Attending" ? "bi-person-walking" : assignment.WorkerStatus == "Completed" ? "bi-check-circle" : "bi-dash-circle") me-1"></i>
                                            @assignment.WorkerStatus
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @bookingBadgeClass px-3 py-2">
                                            @assignment.BookingStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @if (assignment.WorkerStatus == "Completed")
                                            {
                                                <form method="post" asp-action="CompleteAssignment" class="d-inline">
                                                    <input type="hidden" name="assignmentId" value="@assignment.Id" />
                                                    <input type="hidden" name="bookingId" value="@assignment.BookingId" />
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="bi bi-check-circle me-1"></i> Save
                                                    </button>
                                                </form>
                                            }

                                            <form method="post" asp-action="DeleteAssignment" asp-controller="Admin"
                                                  onsubmit="return confirm('Are you sure you want to delete this assignment?');">
                                                <input type="hidden" name="assignmentId" value="@assignment.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-exclamation-circle me-1"></i> No assignments found.
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Status Animation Styles */
    .status-animation-container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .status-animation {
        position: relative;
        width: 60px;
        height: 60px;
    }

    /* Dustbin Base */
    .dustbin {
        position: relative;
        width: 40px;
        height: 50px;
        margin: 0 auto;
    }

    .dustbin-body {
        width: 40px;
        height: 40px;
        background: #6c757d;
        border-radius: 4px;
        position: relative;
        overflow: hidden;
    }

    /* PENDING - Dirty Dustbin */
    .status-animation.pending .dustbin-body {
        background: #8b4513;
    }

    .dirt-particles {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .particle {
        position: absolute;
        background: #5d4037;
        border-radius: 50%;
        animation: float 3s infinite ease-in-out;
    }

        .particle:nth-child(1) {
            width: 6px;
            height: 6px;
            top: 10px;
            left: 8px;
            animation-delay: 0s;
        }

        .particle:nth-child(2) {
            width: 4px;
            height: 4px;
            top: 25px;
            left: 25px;
            animation-delay: 1s;
        }

        .particle:nth-child(3) {
            width: 5px;
            height: 5px;
            top: 15px;
            left: 30px;
            animation-delay: 2s;
        }

    .flies {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .fly {
        position: absolute;
        width: 3px;
        height: 3px;
        background: #000;
        border-radius: 50%;
        animation: flyAround 4s infinite linear;
    }

        .fly:nth-child(1) {
            animation-delay: 0s;
        }

        .fly:nth-child(2) {
            animation-delay: 2s;
        }

    /* ATTENDING - Cleaning Animation */
    .status-animation.attending .dustbin-body {
        background: #17a2b8;
    }

    .bubbles {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .bubble {
        position: absolute;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 50%;
        animation: bubbleRise 2s infinite ease-in;
    }

        .bubble:nth-child(1) {
            width: 8px;
            height: 8px;
            bottom: 5px;
            left: 10px;
            animation-delay: 0s;
        }

        .bubble:nth-child(2) {
            width: 6px;
            height: 6px;
            bottom: 8px;
            left: 25px;
            animation-delay: 0.7s;
        }

        .bubble:nth-child(3) {
            width: 4px;
            height: 4px;
            bottom: 12px;
            left: 15px;
            animation-delay: 1.4s;
        }

    .sparkle {
        position: absolute;
        width: 3px;
        height: 3px;
        background: #ffd700;
        animation: sparkle 1.5s infinite alternate;
    }

    /* COMPLETED - Clean & Shiny */
    .status-animation.completed .dustbin-body {
        background: #28a745;
        box-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
    }

    .sparkles {
        position: absolute;
        width: 100%;
        height: 100%;
    }

        .sparkles .sparkle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: #fff;
            border-radius: 50%;
            animation: shine 2s infinite;
        }

            .sparkles .sparkle:nth-child(1) {
                top: 8px;
                left: 8px;
                animation-delay: 0s;
            }

            .sparkles .sparkle:nth-child(2) {
                top: 8px;
                right: 8px;
                animation-delay: 0.5s;
            }

            .sparkles .sparkle:nth-child(3) {
                bottom: 8px;
                left: 20px;
                animation-delay: 1s;
            }

    /* Animations */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-3px);
        }
    }

    @@keyframes flyAround {
        0% {
            transform: translate(0, 0);
        }

        25% {
            transform: translate(10px, 8px);
        }

        50% {
            transform: translate(5px, 15px);
        }

        75% {
            transform: translate(12px, 5px);
        }

        100% {
            transform: translate(0, 0);
        }
    }

    @@keyframes bubbleRise {
        0% {
            transform: translateY(0) scale(1);
            opacity: 1;
        }

        100% {
            transform: translateY(-30px) scale(1.5);
            opacity: 0;
        }
    }

    @@keyframes sparkle {
        0% {
            opacity: 0.3;
            transform: scale(1);
        }

        100% {
            opacity: 1;
            transform: scale(1.2);
        }
    }

    @@keyframes shine {
        0%, 100% {
            opacity: 0.3;
            transform: scale(1);
        }

        50% {
            opacity: 1;
            transform: scale(1.3);
        }
    }

    /* Worker Avatar */
    .worker-avatar {
        font-weight: bold;
    }

    /* Status Badge Animations */
    .status-badge {
        transition: all 0.3s ease;
    }

        .status-badge:hover {
            transform: scale(1.05);
        }
</style>

<script>
    // Auto-refresh every 30 seconds
    setInterval(() => {
        console.log('Auto-refreshing assignments...');
        location.reload();
    }, 30000);

    // Enhanced status animations
    document.addEventListener('DOMContentLoaded', function() {
        // Add pulsing animation to pending status
        const pendingAnimations = document.querySelectorAll('.status-animation.pending');
        pendingAnimations.forEach(anim => {
            anim.style.animation = 'pulse 2s infinite';
        });

        // Add continuous cleaning animation for attending status
        const attendingAnimations = document.querySelectorAll('.status-animation.attending');
        attendingAnimations.forEach(anim => {
            setInterval(() => {
                const sparkle = anim.querySelector('.sparkle');
                if (sparkle) {
                    sparkle.style.animation = 'none';
                    setTimeout(() => {
                        sparkle.style.animation = 'sparkle 1.5s infinite alternate';
                    }, 10);
                }
            }, 1500);
        });
    });

    // CSS for additional animations
    const style = document.createElement('style');
    style.textContent = `
        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .status-animation.pending {
            animation: pulse 2s infinite;
        }
    `;
    document.head.appendChild(style);
</script>