@model List<TheRockWasteManagement.Models.BookingModel>
@{
    ViewBag.Title = "Worker Dashboard";
    Layout = "~/Views/Shared/_WorkerLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Worker Dashboard - The Rock Waste Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2c786c;
            --secondary: #ff9800;
            --success: #28a745;
            --warning: #ffc107;
            --info: #17a2b8;
            --light: #f8f9fa;
            --dark: #343a40;
        }

        .dashboard-header {
            background: linear-gradient(135deg, var(--primary), #004445);
            color: white;
            padding: 30px 0;
            margin-bottom: 30px;
            border-radius: 0 0 20px 20px;
        }

        .stat-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border-left: 4px solid var(--primary);
            transition: transform 0.3s ease;
            margin-bottom: 20px;
        }

        .booking-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            border-left: 4px solid;
        }

        .status-pending {
            border-left-color: var(--warning);
        }

        .status-attending {
            border-left-color: var(--info);
        }

        .status-completed {
            border-left-color: var(--success);
        }

        .status-badge {
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
        }

        .status-pending-badge {
            background: #fff3cd;
            color: #856404;
        }

        .status-attending-badge {
            background: #d1ecf1;
            color: #0c5460;
        }

        .status-completed-badge {
            background: #d4edda;
            color: #155724;
        }

        .action-btn {
            border-radius: 25px;
            padding: 8px 20px;
            font-weight: 600;
        }

        .urgent-badge {
            background: #dc3545;
            color: white;
            animation: pulse 2s infinite;
        }

        .completed-tasks-btn {
            background: linear-gradient(135deg, var(--success), #20c997);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .completed-tasks-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
            }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .notification-toast {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1055;
            min-width: 300px;
        }

        .nav-tabs .nav-link.active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }
    </style>
</head>
<body>
    <!-- Notification Toast -->
    @if (TempData["Success"] != null)
    {
        <div class="notification-toast">
            <div class="toast show" role="alert">
                <div class="toast-header bg-success text-white">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong class="me-auto">Success</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">@TempData["Success"]</div>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="notification-toast">
            <div class="toast show" role="alert">
                <div class="toast-header bg-danger text-white">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong class="me-auto">Error</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">@TempData["Error"]</div>
            </div>
        </div>
    }

    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-5 fw-bold mb-2">Worker Dashboard</h1>
                    <p class="lead mb-0">Welcome back, <strong>@ViewBag.WorkerEmail</strong></p>
                    <p class="mb-0">Manage your assigned cleaning tasks efficiently</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="stat-card text-white" style="background: rgba(255,255,255,0.2);">
                        <i class="fas fa-tasks fa-2x mb-2"></i>
                        <h3 class="mb-1">@Model.Count</h3>
                        <p class="mb-0">Active Tasks</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Navigation Tabs -->
        <div class="row mb-4">
            <div class="col-12">
                <ul class="nav nav-tabs nav-justified" id="dashboardTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button" role="tab" aria-controls="active" aria-selected="true">
                            <i class="fas fa-list-check me-2"></i>Active Tasks
                            <span class="badge bg-primary ms-2">@Model.Count</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" href="@Url.Action("CompletedTasks", "Worker")" role="tab">
                            <i class="fas fa-check-circle me-2"></i>Completed Tasks
                            <span class="badge bg-success ms-2">View History</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row quick-stats">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: var(--warning);">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h3>@Model.Count(b => b.WorkerStatus == "Pending")</h3>
                    <p class="text-muted mb-0">Pending Tasks</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: var(--info);">
                        <i class="fas fa-person-walking"></i>
                    </div>
                    <h3>@Model.Count(b => b.WorkerStatus == "Attending")</h3>
                    <p class="text-muted mb-0">In Progress</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: var(--success);">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3>@Model.Count(b => b.WorkerStatus == "Completed")</h3>
                    <p class="text-muted mb-0">Awaiting Review</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: var(--primary);">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h3>@Model.Count</h3>
                    <p class="text-muted mb-0">Total Active</p>
                </div>
            </div>
        </div>

        <!-- Quick Action Buttons -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="fw-bold text-primary mb-0">
                        <i class="fas fa-list-check me-2"></i>Your Active Assignments
                    </h3>
                    <div>
                        <a href="@Url.Action("CompletedTasks", "Worker")" class="btn completed-tasks-btn me-2">
                            <i class="fas fa-history me-2"></i>View Completed Tasks
                        </a>
                        <button class="btn btn-outline-primary btn-sm" onclick="location.reload()">
                            <i class="fas fa-sync-alt"></i> Refresh
                        </button>
                    </div>
                </div>
                <p class="text-muted mt-2">
                    <i class="fas fa-info-circle me-1"></i>
                    When you mark a task as "Completed", it will be sent to admin for review. Once approved, it will move to your completed tasks history.
                </p>
            </div>
        </div>

        <!-- Bookings Section -->
        <div class="row">
            <div class="col-12">
                @if (Model.Count == 0)
                {
                    <div class="text-center py-5">
                        <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No Active Assignments</h4>
                        <p class="text-muted">You don't have any assigned cleaning tasks at the moment.</p>
                        <a href="@Url.Action("CompletedTasks", "Worker")" class="btn completed-tasks-btn mt-3">
                            <i class="fas fa-history me-2"></i>View Your Completed Tasks
                        </a>
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var booking in Model)
                        {
                            var isUrgent = booking.BookingDate.Date <= DateTime.Now.AddDays(1).Date;
                            var cardClass = $"booking-card status-{booking.WorkerStatus.ToLower()}";
                            var badgeClass = $"status-badge status-{booking.WorkerStatus.ToLower()}-badge";

                            <div class="col-lg-6 col-xl-4 mb-4">
                                <div class="@cardClass">
                                    @if (isUrgent)
                                    {
                                        <div class="urgent-badge badge mb-2">
                                            <i class="fas fa-exclamation-triangle me-1"></i> URGENT
                                        </div>
                                    }

                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <span class="@badgeClass">
                                            <i class="fas @(booking.WorkerStatus == "Pending" ? "fa-clock" : booking.WorkerStatus == "Attending" ? "fa-person-walking" : "fa-check-circle") me-1"></i>
                                            @booking.WorkerStatus
                                        </span>
                                        <small class="text-muted">#@booking.BookingId.Substring(0, 8)</small>
                                    </div>

                                    <div class="mb-3">
                                        <h6 class="fw-bold text-primary mb-2">
                                            <i class="fas fa-user me-2"></i>Customer
                                        </h6>
                                        <p class="mb-0">@booking.CustomerName</p>
                                    </div>

                                    <div class="mb-3">
                                        <h6 class="fw-bold text-primary mb-2">
                                            <i class="fas fa-map-marker-alt me-2"></i>Location
                                        </h6>
                                        <p class="mb-0">@booking.Address</p>
                                        <small class="text-muted">@booking.ServiceType Service</small>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <h6 class="fw-bold text-primary mb-2">
                                                <i class="fas fa-calendar me-2"></i>Date
                                            </h6>
                                            <p class="mb-0 @(isUrgent ? "text-danger fw-bold" : "")">@booking.BookingDate.ToString("MMM dd, yyyy")</p>
                                        </div>
                                        <div class="col-6">
                                            <h6 class="fw-bold text-primary mb-2">
                                                <i class="fas fa-clock me-2"></i>Time
                                            </h6>
                                            <p class="mb-0">@booking.TimeSlot</p>
                                        </div>
                                    </div>

                                    <form asp-action="UpdateAssignmentStatus" method="post" class="mt-3">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="assignmentId" value="@booking.AssignmentId" />
                                        <input type="hidden" name="bookingId" value="@booking.BookingId" />

                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Update Your Status</label>
                                            <select name="status" class="form-select" onchange="updateStatus(this)">
                                                <option value="Pending" selected="@(booking.WorkerStatus == "Pending")">🕒 Pending - Not Started</option>
                                                <option value="Attending" selected="@(booking.WorkerStatus == "Attending")">🚶 Attending - On Site</option>
                                                <option value="Completed" selected="@(booking.WorkerStatus == "Completed")">✅ Completed - Job Done</option>
                                            </select>
                                        </div>

                                        <button type="submit" class="btn btn-primary action-btn w-100">
                                            <i class="fas fa-sync-alt me-2"></i>Update Status
                                        </button>
                                    </form>

                                    <!-- Quick Actions -->
                                    <div class="mt-3">
                                        <div class="btn-group w-100">
                                            <button class="btn btn-outline-success btn-sm" onclick="showDirections('@booking.Address')">
                                                <i class="fas fa-directions"></i>
                                            </button>
                                            <button class="btn btn-outline-info btn-sm" onclick="contactCustomer('@booking.CustomerName')">
                                                <i class="fas fa-phone"></i>
                                            </button>
                                            <button class="btn btn-outline-warning btn-sm" onclick="reportIssue('@booking.BookingId')">
                                                <i class="fas fa-flag"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Status Info -->
                                    @if (booking.WorkerStatus == "Completed")
                                    {
                                        <div class="alert alert-info mt-3 mb-0">
                                            <i class="fas fa-info-circle me-2"></i>
                                            <small>This task is awaiting admin review. Once approved, it will move to your completed tasks history.</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-hide notifications after 5 seconds
        setTimeout(() => {
            const toasts = document.querySelectorAll('.toast');
            toasts.forEach(toast => {
                const bsToast = new bootstrap.Toast(toast);
                bsToast.hide();
            });
        }, 5000);

        function updateStatus(select) {
            const form = select.closest('form');
            const button = form.querySelector('button[type="submit"]');
            const originalText = button.innerHTML;

            button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating...';
            button.disabled = true;

            // Submit form after a brief delay to show feedback
            setTimeout(() => {
                form.submit();
            }, 500);
        }

        function showDirections(address) {
            const encodedAddress = encodeURIComponent(address);
            window.open(`https://www.google.com/maps/dir/?api=1&destination=${encodedAddress}`, '_blank');
        }

        function contactCustomer(customerName) {
            alert(`Contact ${customerName}\n\nPlease use the company phone system to contact the customer.`);
        }

        function reportIssue(bookingId) {
            const issue = prompt(`Report issue for booking ${bookingId}:\n\nPlease describe the issue:`);
            if (issue) {
                alert('Issue reported successfully. Support team will contact you shortly.');
                // Here you would typically send this to your backend
            }
        }

        // Auto-refresh every 2 minutes to sync with admin changes
        setInterval(() => {
            const activeModals = document.querySelectorAll('.modal.show');
            if (activeModals.length === 0) {
                location.reload();
            }
        }, 120000); // 2 minutes
    </script>
</body>
</html>